<?xml version="1.0" encoding="UTF-8"?>

<launch>
    <!-- Arguments -->
    <arg name="map_file" default="$(find amr200)/maps/test_park2.yaml"/>
    <arg name="open_rviz" default="true"/>
    <arg name="move_forward_only" default="false"/>

    <!-- amr200 -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find amr200)/models/amr200.xacro'"/>

    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

    <!-- AMCL -->
    <include file="$(find amr200)/launch/amcl.launch"/>

    <!-- move_base -->
    <include file="$(find amr200)/launch/move_base.launch">
    <!-- <arg name="model" value="$(arg model)" /> -->
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>

    <!-- rviz -->
    <group if="$(arg open_rviz)"> 
        <node pkg="rviz" type="rviz" name="rviz" required="true"
                args="-d $(find amr200)/rviz/navigation.rviz"/>
    </group>
</launch>