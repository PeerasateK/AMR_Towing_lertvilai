<?xml version="1.0" encoding="UTF-8"?>

<launch>

  <param name="robot_description" command="$(find xacro)/xacro '$(find amr200)/models/amr200.xacro'"/>

  <arg name="x" default="11"/>
  <arg name="y" default="9.9"/>
  <arg name="z" default="0.3"/>

  <node name="amr200_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="-urdf -param robot_description -model amr200 -x $(arg x) -y $(arg y) -z $(arg z)" />

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find amr200)/config/joint.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/amr200" args="joint_state_controller towing_position_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
    respawn="false" output="screen">
    <remap from="/joint_states" to="/amr200/joint_states" />
  </node>

</launch>